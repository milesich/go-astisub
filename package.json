{
  "name": "astisub",
  "version": "1.0.0",
  "description": "TypeScript library for manipulating subtitle files across multiple formats (SRT, WebVTT, TTML, SSA/ASS, STL, Teletext)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "astisub": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "subtitles",
    "srt",
    "webvtt",
    "vtt",
    "ttml",
    "ssa",
    "ass",
    "stl",
    "teletext",
    "captions",
    "subtitle-parser",
    "subtitle-converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "iconv-lite": "^0.6.3",
    "node-html-parser": "^6.1.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
